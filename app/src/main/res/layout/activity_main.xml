<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/home_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/darker_gray"
        app:layout_constraintStart_toStartOf="parent"/>


    <ImageButton
        android:id="@+id/home_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_red_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/call_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/home_icon"
        android:layout_marginBottom="5dp"
        app:tint="@color/white" />

    <ImageButton
        android:id="@+id/call_btn"
        android:layout_width="wrap_content"
        android:backgroundTint="@android:color/holo_red_dark"
        app:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/msg_btn"
        app:layout_constraintStart_toEndOf="@+id/home_btn"
        app:srcCompat="@drawable/call_icon"
        android:layout_marginBottom="5dp" />

    <ImageButton
        android:id="@+id/msg_btn"
        android:layout_width="wrap_content"
        android:backgroundTint="@android:color/holo_red_dark"
        app:tint="@color/white"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/call_btn"
        app:srcCompat="@drawable/message_icon" />


</androidx.constraintlayout.widget.ConstraintLayout>